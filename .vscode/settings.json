{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/*.meta": true,
		"library/": true,
		"local/": true,
		"temp/": true,
		"**/node_modules": true
	},
    "editor.defaultFormatter": "esbenp.prettier-vscode",
	"[svelte]": {
        "editor.defaultFormatter": "svelte.svelte-vscode"
    },
    "svelte.enable-ts-plugin": true,
}
